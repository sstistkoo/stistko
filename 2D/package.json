{
  "name": "soustruznik-2d",
  "version": "2.0.0",
  "description": "Parametrické kreslení CAD aplikace s AI asistencí",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8080",
    "dev": "python -m http.server 8080",
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js && echo 'Production build ready in dist/'",
    "test": "node tests/run-tests.cjs",
    "test:watch": "node --watch tests/run-tests.cjs",
    "serve": "npx http-server -p 8080",
    "serve:dist": "cd dist && python -m http.server 8080",
    "format": "npx prettier --write \"src/**/*.js\" \"lib/**/*.js\"",
    "lint": "echo 'Add ESLint: npm install --save-dev eslint'"
  },
  "keywords": [
    "CAD",
    "Drawing",
    "Canvas",
    "AI",
    "Gemini",
    "Parametric",
    "Geometry",
    "Web Application"
  ],
  "author": "CAD Team",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.33.0"
  },
  "browser": {
    "@google/genai": "@google/genai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/soustruznik-2d"
  },
  "bugs": {
    "url": "https://github.com/yourusername/soustruznik-2d/issues"
  },
  "homepage": "https://github.com/yourusername/soustruznik-2d#readme",
  "engines": {
    "node": ">=14.0.0"
  }
}
